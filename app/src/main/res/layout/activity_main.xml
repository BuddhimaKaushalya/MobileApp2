<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="512dp"
        android:layout_height="793dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="0dp">
        <!-- Your content goes here -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="130dp"
            android:text=" RED VALUE" />

        <EditText
            android:id="@+id/editTextRed"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:contentDescription="RedValue"
            android:hint="0"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GREEN VALUE"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="45dp"/>

        <EditText
            android:id="@+id/editTextGreen"
            android:layout_width="370dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:contentDescription="GreenValue"
            android:hint="0"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BLUE VALUE"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="45dp"/>


        <EditText
            android:id="@+id/editTextBlue"
            android:layout_width="370dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:contentDescription="BlueValue"
            android:hint="0"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:inputType="number" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGenerate"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:onClick="generateColor"
            android:text="Generate"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="2dp"
            app:strokeColor="#000000" />
    </LinearLayout>
</LinearLayout>